.shopWrapper {
  padding: 10rpx;
  height: 100%;
  background: #f4f5f6;
  box-sizing: border-box;
}

.showList {
  display: flex;
  padding: 10rpx;
  background: #fff;
  border-radius: 10rpx;
}
.icon{
  display:inline;
}
.check {
  width: 50rpx;
  height: 50rpx;
  line-height: 200rpx;
  border-radius: 50%;
  border: 1rpx solid #c4c3c3;
  margin: 75rpx auto 0 auto;
}

.box1 {
  text-align: center;
  flex: 1;
}

.box2 {
  flex: 2;
}

.box3 {
  flex: 4;
}

.image {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid red;
  padding: 10rpx;
  box-sizing: border-box;
}
.box3Subhead{
  font-size: 34rpx;
  color: #666666;
}
/* .box3Name {
  min-height: 100rpx;
} */

.amout {
  display: flex;
  margin-top: 10rpx;
}

.price {
  flex: 1;
  color: rgb(230, 113, 59);
}

.sum {
  flex: 1;
  color: #666;
  display: flex;
}

.reduce {
  flex: 1;
}
.reducee {
  text-align: center;
  border: 1rpx solid #999;
  border-radius: 50%;
}
.summation {
  flex: 2;
  text-align: center;
}

.plus {
  flex: 1;
}
.pluss {
  text-align: center;
  border: 1rpx solid #999;
  border-radius: 50%;
}
.payWrapper{
  position: fixed;
  bottom: 0;
  left: 0;
  display:flex;
  flex-wrap:wrap;
  flex-grow:1;
  align-items:flex-start;
  align-content:flex-start;
  justify-content:space-between;
  height: 100rpx;
  width: 100%;
  background: rgb(250, 247, 94);
  box-sizing: border-box;
}
.allChoice{
  flex: 1;
  font-size: 30rpx;
  color: #666666;
  text-align:center;
  line-height:100rpx;
  height: 100%;
}
.allCheck{
  width: 50rpx;
  border-radius: 50%;
  border: 1rpx solid #c4c3c3;
  margin: 25rpx auto 0 auto;
  height:50rpx;
  background:#fff;
}
.payMoney{
  height: 100%;
  line-height: 100rpx;
  flex: 3;
}
.payBtn{
  height: 100%;
  background: #fd612b;
  color: #fff;
  width: 180rpx;
  line-height: 100rpx;
  text-align: center;
  flex: 1;
}
.pay-bottom{
  padding-bottom: 120rpx;
  padding-top: 10rpx;
}
.amount1{
  color: #fd612b;
  font-size: 48rpx;
}