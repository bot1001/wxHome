.shopWrapper {
  padding: 10rpx;
  height: 100%;
  background: #f4f5f6;
  box-sizing: border-box;
}

.showList {
  display: flex;
  padding: 10rpx;
  background: #fff;
  border-radius: 10rpx;
}
.icon{
  display:inline;
}
.check {
  width: 40rpx;
  height: 40rpx;
  line-height: 200rpx;
  border-radius: 50%;
  border: 1rpx solid #c4c3c3;
  margin: 75rpx auto 0 auto;
}

.box1 {
  text-align: center;
  flex: 1;
}

.box2 {
  flex: 2;
}

.box3 {
  flex: 4;
}

.image {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid red;
  padding: 10rpx;
  box-sizing: border-box;
}
.box3Subhead{
  font-size: 32rpx;
  color: #666666;
}
