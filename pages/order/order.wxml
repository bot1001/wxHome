<!--pages/order/order.wxml-->
<view wx:if="{{show}}" class="empty">暂无记录</view>

<view wx:else>
  <view wx:for="{{orderInfo}}" wx:for-index="id" wx:for-item="item" class="complaint-content pay-bottom">
  <view class='order{{item.status}}'>
     <view class="list">
      <text class="payContent">订单：{{item.order_id}} </text>
      <view class="payProject payAmount" style="color:#666666">金额：{{item.amount}}</view>
    </view>
    <view class="paystate">
     <!-- <view class="status">状态：{{item.sta}}</view> -->
     <view class="time"><text class='time{{item.status}}'>{{item.payment_time}}</text></view>
    </view>
  </view>    
  </view>
