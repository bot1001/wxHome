.orderWrepper{
  padding:10rpx 10rpx 100rpx 10rpx;
  background: rgb(240, 249, 250);
  min-height: 100%;
  font-size: 34rpx;
  box-sizing: border-box;
}
.flexbox{
  display:flex;
  flex-wrap:wrap;
  justify-content:space-between;
 
}
.flexl{
  /* background: rgb(224, 224, 224); */
   padding: 5rpx;
   flex:1;
   text-align: center;
   background: rgb(222, 223, 223);
}
.flexr{
  /* background: #fff; */
   padding: 5rpx;
   flex: 4;
   text-align: center;
    background: #fff;
}
.pay-bottom{
  margin-bottom:15rpx;
  padding:10rpx;
  font-size:32rpx;
  background: #fff;
  border-radius: 10rpx;
}
.list{
  width: 50%;
  flex: 1;
}
.time,.payAmount{
  margin-top: 30rpx;
}
.order{
  display: flex;
}
.paystate{
  flex: 1;
  text-align: right;
  font-size: 40rpx;
  font-weight: 600;
}
.null{
  height: 20rpx;
}
.payWrapper{
  position: fixed;
  bottom: 0;
  left: 0;
  display:flex;
  flex-wrap:wrap;
  flex-grow:1;
  align-items:flex-start;
  align-content:flex-start;
  justify-content:space-between;
  height: 100rpx;
  width: 100%;
  background: rgb(250, 247, 94);
  padding-left: 30rpx;
  box-sizing: border-box;
}
.payMoney{
  height: 100%;
  line-height: 100rpx;
}
.payBtn{
  height: 100%;
  background: #fd612b;
  color: #fff;
  width: 180rpx;
  line-height: 100rpx;
  text-align: center;
}
.amount{
  color: #fd612b;
  font-size: 48rpx;
}